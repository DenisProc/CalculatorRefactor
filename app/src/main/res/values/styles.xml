<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton">
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="backgroundTint">@color/calc_backgroundTint_light</item>
        <item name="android:layout_margin">@dimen/calc_button_border</item>
    </style>

    <style name="CalcOperationButton" parent="CalcButton">
        <item name="android:textColor">@color/operationBtnColor</item>
    </style>

    <style name="ThemeButtonStyle">
        <item name="cornerRadius">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:textSize">@dimen/theme_btn_text_size</item>
    </style>

    <style name="CalcButtonDark" parent="CalcButton">
        <item name="backgroundTint">#383838</item>
    </style>

    <style name="CalcOperationButtonDark" parent="CalcButtonDark">
        <item name="android:textColor">@color/operationBtnColor</item>
    </style>

</resources>